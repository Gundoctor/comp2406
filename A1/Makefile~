OBJECTS = main.o Form.o CourseRelatedQueue.o Student.o Cutaes.o CourseRelated.o Course.o CourseQueue.o Application.o ApplicationQueue.o ApplicationIO.o

cutaes:			$(OBJECTS)
			g++ -o cutaes $(OBJECTS) -lncurses

main.o:			main.cpp Form.h Cutaes.h
			g++ -c main.cpp -lncurses

Cutaes.o:		Cutaes.cpp Cutaes.h
			g++ -c Cutaes.cpp -lncurses
	
Form.o:			Form.cpp Form.h
			g++ -c Form.cpp -lncurses

CourseRelatedQueue.o:	CourseRelatedQueue.cpp CourseRelatedQueue.h CourseRelated.h
			g++ -c CourseRelatedQueue.cpp

CourseRelated.o:	CourseRelated.cpp CourseRelated.h
			g++ -c CourseRelated.cpp

Course.o:		Course.cpp Course.h
			g++ -c Course.cpp

CourseQueue.o:		CourseQueue.cpp CourseQueue.h Course.h
			g++ -c CourseQueue.cpp

Application.o:		Application.cpp Application.h Student.h ApplicationQueue.h CourseRelatedQueue.h Course.h
			g++ -c Application.cpp

ApplicationQueue.o:	ApplicationQueue.cpp ApplicationQueue.h Application.h
			g++ -c ApplicationQueue.cpp

Student.o:		Student.cpp Student.h
			g++ -c Student.cpp


clean: 		
			rm -f *.o cutaes	
